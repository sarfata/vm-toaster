#!/bin/bash

set -o pipefail

check_args()
{
  true
}

fix_modules()
{
  if ! [ -d source/open-vm-tools/modules/linux ]; then
    return 0
  fi

  find source/open-vm-tools/modules/linux \
    -type f -a -name Makefile.kernel | while read path; do
  
    (cd "`dirname "$path"`" &&
      ln -sf Makefile.kernel Makefile.normal)
  done
}

clean_all()
{
  for i in source/*; do
    if [ -h "$i" -a -f "$i/Makefile" ]; then
      ( cd "$i" && make clean && make distclean )
    fi
  done

  return 0
}

main()
{
  fix_modules
  check_args "$@"
  clean_all
}

main "$@"
exit $?

