#!/bin/sh

start()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/../env" &&
  merge_environment /srv || return 255

  for type in rsa dsa ecdsa ed25519; do
    local key_file="$PACKAGE_ROOT/etc/ssh/ssh_host_${type}_key"

    if ! [ -f "$key_file" ]; then
      ssh-keygen -q -t "$type" -N '' -f "$key_file" \
        || return "$?"
    fi
  done

  return 0
}

main()
{
  start
  return "$?"
}

main
exit "$?"

