#!/bin/sh

install()
{
  local self="`realpath "$0"`"
  local base="`dirname -- "$self"`"

  source "$base/env" &&
  merge_environment /srv || return 255

  chown gardener:gardener "$PACKAGE_STORAGE/data" &&
  chown root:gardener "$PACKAGE_STORAGE/logs" &&
  chmod 0775 "$PACKAGE_STORAGE/logs"

  return "$?"
}

install "$@"
exit "$?"

